<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/6fbdbcb130.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>WeatherApp</title>
</head>
<body>


    <!-- HEADER -->
    <nav class="header navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Weather App</a>
        <a class="logout" href="./login.html">Deconnexion</a>
   </nav> 


   <!-- GRID -->
   <div class="container">
    <div class ="row">
           <!-- Div Recherche -->
        <form action="/addcity" method="post" class="display-inline">
            <div class="col-12">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Enter city name here">
                    <span class="input-group-text btn btn-warning" id="inputGroup-addCity">Add</span>
                  </div>
            </div>
        </form>
    </div>
    <div class="row">
            <!-- Div Carte et villes -->
        <div class="col-12 col-md-6">
            <img src="/images/map.png" class="img-fluid" alt="Carte d'affichage des villes retenues">
        </div>
        <div class="col-12 col-md-6">
           
          <!-- refresh weather forecast -->
            <ul class="list-group">
              <li class="list-group-item d-flex justify-content-center align-items-center">
                Update City
                <span class="input-group-text btn"><i class="fa-solid fa-arrows-rotate"></i></span>
            </li>
                
              <!-- Liste villes -->
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Paris
                  <div>
                    <span>Nuageux</span>
                    <img src="/images/picto-1.png" class="rounded float-begin" alt="...">
                    <span class="badge bg-primary rounded-pill">17°c</span>
                    <span class="badge bg-secondary rounded-pill">19°c</span>
                  </div>
                  <span class="input-group-text btn"><i class="fa-regular fa-circle-xmark  icon"></i></span>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Madrid
                  <div>
                    <span>Ensoleillé</span>
                    <img src="/images/picto-1.png" class="rounded float-begin" alt="weather-picto">
                    
                    <span class="badge bg-primary rounded-pill">27°c</span>
                    <span class="badge bg-secondary rounded-pill">32°c</span>

                  </div>
                  <span class="input-group-text btn"><i class="fa-regular fa-circle-xmark  icon"></i></span>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Londres
                  <div>
                    <span>Pluvieux</span>
                    <img src="/images/picto-1.png" class="rounded float-begin" alt="...">
                    <span class="badge bg-primary rounded-pill">11°c</span>
                    <span class="badge bg-secondary rounded-pill">16°c</span>
                  </div>
                  <span class="input-group-text btn"><i class="fa-regular fa-circle-xmark  icon"></i></span>
                </li>
              </ul>



          </div>
    </div>

   </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>